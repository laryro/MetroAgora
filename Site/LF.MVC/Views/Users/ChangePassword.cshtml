@model UsersChangePasswordModel
<div class="content-wrapper main-content clearfix">
    @using (Html.BeginForm())
    {
    <form action="/Account/Login" id="mainForm" method="post" novalidate="novalidate">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Trocar a senha </strong></h3></div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.ResourceLabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua nova senha", type = "password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.ResourceLabelFor(m => m.RetypePassword)
                        @Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control", placeholder = "Repita a sua senha", type = "password" })
                        @Html.ValidationMessageFor(m => m.RetypePassword)
                    </div>
                    <button type="submit" onclick="submitForm();" class="btn btn-default pull-right" value="@Common.Save"><i class="glyphicon glyphicon-floppy-disk"></i> Salvar</button>
                </div>
            </div>
        </div>
    </form>
    }
</div>